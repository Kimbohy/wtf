{
  "name": "wtf",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "What To Finish is an app that lists all your projects in one place.",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"pnpm dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "NODE_OPTIONS='--dns-result-order=ipv4first' tsx watch src/backend/index.ts",
    "dev:electron": "concurrently \"vite\" \"tsc -p tsconfig.electron.json && cross-env NODE_ENV=development electron .\"",
    "build": "tsc -p tsconfig.electron.json && vite build && electron-builder",
    "build:dir": "tsc -p tsconfig.electron.json && vite build && electron-builder --dir",
    "lint": "eslint .",
    "preview": "vite preview",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/db/seed.ts"
  },
  "build": {
    "appId": "com.wtf.app",
    "productName": "WTF - What To Finish",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "drizzle/**/*"
    ],
    "asar": false,
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "dependencies": {
    "@base-ui/react": "^1.1.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/eden": "^1.4.6",
    "@elysiajs/node": "^1.4.3",
    "@sinclair/typebox": "^0.34.48",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node-fetch": "^2.6.13",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "https-proxy-agent": "^7.0.6",
    "lucide-react": "^0.563.0",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "react": "^19.2.0",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "shadcn": "^3.8.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
